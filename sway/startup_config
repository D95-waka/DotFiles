## sway startup configuration

xwayland disable
focus_follows_mouse no
input * {
	xkb_options "grp:win_space_toggle,caps:escape_shifted_capslock"
	xkb_layout "us,il"
	dwt disabled
	tap enabled
	pointer_accel 0.35
}

exec_always 'killall mako; mako &'
exec_always '~/Scripts/info_daemon/info_daemon.sh'

# startup apps
exec ' \
	$TERMINAL & \
	$TERMINAL -e ranger & \
	pidof -q firefox || firefox &'

bar 1 {
	font monospace 12
	modifier "Mod4+Shift"
	mode hide
	position top
	separator_symbol |
	status_command ~/.config/sway/status.sh
}

set $up k
set $down j
set $left h
set $right l
set $mod Mod4

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# vim: set syntax=sh
